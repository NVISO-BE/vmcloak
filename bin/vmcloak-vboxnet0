#!/bin/sh
# Copyright (C) 2014-2015 Jurriaan Bremer.
# This file is part of VMCloak - http://www.vmcloak.org/.
# See the file 'docs/LICENSE.txt' for copying permission.

if [ "$1" = "-h" ]; then
    echo "Usage: $0 [ipaddr] [netmask] [lower_ipaddr] [upper_ipaddr]"
    echo "    $0 192.168.57.1"
    echo
    echo "Defaults to:"
    echo "    $0 192.168.56.1 255.255.255.0 192.168.56.100 192.168.56.150"
    exit
fi

# Only create a new hostonly interface if it does not already exist.
if [ -z "$(VBoxManage list hostonlyifs)" ]; then
    VBoxManage hostonlyif create
fi

if [ "$#" -ne 0 ]; then
    IPADDR="$1"
    shift
else
    IPADDR="192.168.56.1"
fi

if [ "$#" -ne 0 ]; then
    NETMASK="$1"
    shift
else
    NETMASK="255.255.255.0"
fi

if [ "$#" -ne 0 ]; then
    LOWERIPADDR="$1"
    shift
else
    LOWERIPADDR="192.168.56.100"
fi

if [ "$#" -ne 0 ]; then
    UPPERIPADDR="$1"
    shift
else
    UPPERIPADDR="192.168.56.150"
fi

# Configure the hostonly interface and automatically enable it (also in
# case it already existed but was disabled).
VBoxManage hostonlyif ipconfig vboxnet0 --ip "$IPADDR" --netmask "$NETMASK"
VBoxManage dhcpserver modify --netname HostInterfaceNetworking-vboxnet0 --ip "$IPADDR" --netmask "$NETMASK" --lowerip "$LOWERIPADDR" --upperip "$UPPERIPADDR"
